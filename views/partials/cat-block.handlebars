<div class="container">
	<div class="card">
		<div class="row">
			<div class="col-md-8 titleLine">
				<a href="{{link}}" target="_blank">{{title}}</a>

			</div>
			<div class="col-md-1 text-center">
				<button type="button" id="saveButton" class="btn save-article" data-id="{{this.id}}">Save</button>
			</div>
			<div class="col-md-1 text-center">

				<button type="button" id="commentButton" class="btn add-note" data-toggle="modal" data-target="#commentModal"
				 data-id="{{_id}}">Comment</button>
			</div>
			<div class="col-md-1 text-center">
				<button type="button" id="deleteButton" class="btn delete-article" data-id="{{_id}}">Delete</button>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12 excerpt">
				{{excerpt}}
			</div>
			{{!-- <div class="col-md-4"></div> --}}

		</div>

		<div class="row">
			<div class="col-md-12 comment">
				{{note}}
				{{!-- {{_id}} --}}
			</div>
			{{!-- <div class="col-md-4"></div> --}}
		</div>
	</div>
</div>



<!-- Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" role="document" aria-labelledby="exampleModalCenterTitle"
 aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="articleName">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="form-group">
					<label for="message-text" class="col-form-label">Comment:</label>
					<textarea class="form-control" id="message-text"></textarea>
				</div>
			</div>
			<div class="modal-footer">
				{{!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> --}}
				<button type="button" id="saveNoteButton" data-dismiss="modal"  data-id="{{notes}}" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>